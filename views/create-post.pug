extends layout

block styles 
  link(rel="stylesheet", href="/stylesheets/create-post.css")

block content

  .container

    form(method="POST", action="../posts/create-post", enctype="multipart/form-data")
      .return 
        a(href="/home")
          | Back to Home
      h1 Create a New Post
      .form-group
        label.upload-area(for="image") Select images to upload:
        input(type="file", name="image", id="image", multiple=true, accept="image/*", required hidden)
        small Upload between 1 and 3 images (JPG, PNG, etc.)
        .image-preview-container#previewContainer
        //- This div will be populated with image previews using JavaScript

      .form-group
        label(for="title") Title:
        input(type="text", name="title", id="title", required, placeholder="Enter post title")

      .form-group
        label(for="content") Description:
        textarea(name="content", id="content", rows="5", required, placeholder="Write your post here")

     

      button(type="submit") Publish
    
  <script src="/javascripts/script_post_images.js"></script>

