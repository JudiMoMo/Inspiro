//- // views/error.pug
doctype html
html
  head
    title Error
    style.
      body {
        font-family: sans-serif;
        padding: 2rem;
        background: #fdf2f2;
        color: #333;
      }
      h1 {
        color: #e53935;
      }
      pre {
        background: #f5f5f5;
        padding: 1rem;
        border-radius: 5px;
        overflow-x: auto;
      }
  body
    h1= message || 'Something went wrong.'
    if typeof error !== 'undefined' && error.status
      h2 Status Code: #{error.status}
    if typeof error !== 'undefined' && error.stack
      h3 Stack Trace:
      pre #{error.stack}
