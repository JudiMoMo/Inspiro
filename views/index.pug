extends layout


block styles
  link(rel="stylesheet", href="/stylesheets/index.css")


block content
  section.principal
    div.container
      .image-cover 
        img(src="/images/cover-index-2.jpg", alt="Cover Image")
      div.login-register
        .content
          h1 Welcome to Inspiro
          p The artist community you always wanted
        .login 
        form(action="/login", method="POST")
          .form-group
            label.strong(for="username") Username
            input(type="text", id="username", name="username", placeholder="Username"  required)
          .form-group
            label.strong(for="password") Password 
            input(type="password", id="password", name="password", placeholder="Password" required)
            .recover
              p.strong Forgot your password?
              a(href="/reset-password") Reset Password
          button(type="submit") Login
          .register
            p.strong Don't have an account?
            a(href="/users/register") Register

    

