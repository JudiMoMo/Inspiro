extends layout

block styles
    link(rel="stylesheet", href="/stylesheets/profile.css")

block content
    include partials/options.pug

    include partials/nav.pug
    .profile-container.main-container
        section.card
            .profile-header
                img.profile-img(src=user.profileImage, alt="Profile Image")
                
            .user-info
                h1 #{user.username}
                .user-actions 
                    button.btn.tooltip
                        i(class="fas fa-user-plus" type="button" onclick=`followUser('${user._id}')`) 
                            span.tooltiptext Follow
                    button.btn.tooltip
                        i(class="fas fa-star")
                            span.tooltiptext Add to Favorites
                    button.btn.tooltip
                        i(class="fas fa-share-alt")
                            span.tooltiptext Share Profile

            .profile-actions 
                button.btn.tooltip
                    i(class="fas fa-user-edit") 
                    span.tooltiptext Edit Profile
                button.btn.tooltip
                    i(class="fas fa-cog")
                        span.tooltiptext Settings
                form(action="/users/logout", method="get")
                    button.btn.tooltip(type="submit")
                        i(class="fas fa-sign-out-alt")
                            span.tooltiptext Logout
                    
        section.user-desription 
            p.name #{user.name}
            p.bio #{user.bio}
            p.location #{user.location}
            p.website #{user.website}


        section.user-details
            ul
                li
                    i(class="fas fa-image") 
                    | 0 posts
                li
                    i(class="fas fa-user") 
                    | 0 followers
                li
                    i(class="fas fa-user-friends") 
                    | 0 following
                
        section.tabs
            button.tab(data-tab="posts")
                h2 Posts
            button.tab(data-tab="portfolio")
                h2 Portfolio
            button.tab(data-tab="tagged")
                h2 Tagged

        section#tab-content.tab-content
            include partials/posts.pug
            